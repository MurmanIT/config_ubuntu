[core]
		editor = vim
		excludesfile = ~/.gitignore         

[color]
        ui = true

[color "branch"]
		current = yellow bold
		local = green bold
		remote = cyan bold        

[color "status"]
		added = green bold
		changed = yellow bold
		untracked = red bold

[credential]
        helper = cache --timeout=3600                
[push]
	default = simple
